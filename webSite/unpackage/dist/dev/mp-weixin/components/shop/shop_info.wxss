/* 商店信息卡 */
.info-shop {
  position: relative;
}
.info-card {
  margin: 0;
  top: -200rpx;
  position: relative;
}
.info-card__intro {
  margin: 0 5%;
  margin-top: 5%;
  position: relative;
  display: block;
}
.info-card__intro image {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}
.info-card__intro--company {
  width: 412rpx;
  font-size: 48rpx;
  font-weight: 388;
  letter-spacing: 5rpx;
  left: 131rpx;
  top: -18rpx;
  position: absolute;
}
.info-card__intro-- {
  position: absolute;
  left: 100rpx;
  top: 55rpx;
}
.info-card__intro--especially {
  display: inline;
  margin-left: 30rpx;
}
.info-card__intro--especially image {
  width: 33rpx;
  height: 33rpx;
}
